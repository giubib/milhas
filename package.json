{
  "name": "vai-de-milhas",
  "version": "1.0.0",
  "description": "Vai de Milhas como projeto para formação da DrivenFlex.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run migration:run && npm run seed && node dist/src/server.js",
    "dev": "ts-node-dev src/server.ts",
    "migration:run": "prisma migrate deploy",
    "seed": "prisma db seed",
    "test:load-envs": "dotenv -e .env.test",
    "test": "npm run test:load-envs -- jest -- --runInBand",
    "test:coverage": "npm run test -- --coverage",
    "test:integration": "npm run test:load-envs -- jest tests/integration -- --runInBand",
    "test:integration:coverage": "npm run test:integration -- --coverage",
    "test:integration:migration:run": "npm run test:load-envs prisma migrate deploy",
    "test:unit": "jest tests/unit",
    "test:unit:coverage": "npm run test:unit -- --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "dotenv": "^16.5.0",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "http-status": "^2.1.0",
    "joi": "^17.13.3",
    "tsx": "^4.19.4",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.20",
    "@types/pg": "^8.15.2",
    "@types/supertest": "^6.0.3",
    "dotenv-cli": "^8.0.0",
    "faker": "^6.6.6",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.8.2",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
